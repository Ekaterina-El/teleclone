<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="toolbar">
        <item name="android:theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:background">@color/purple_500</item>
    </style>

    <style name="user_info">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/purple_500</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingHorizontal">@dimen/settings_user_info_paddingHorizontal</item>
        <item name="android:paddingVertical">@dimen/settings_user_info_paddingVertical</item>
    </style>

    <style name="action_menu" parent="Theme.AppCompat.Light">
        <item name="background">@color/white</item>
        <item name="actionMenuTextColor">@color/grey_light</item>
        <item name="titleTextColor">@color/grey_light</item>
    </style>

    <style name="user_photo">
        <item name="android:layout_width">@dimen/settings_user_photo_width</item>
        <item name="android:layout_height">@dimen/settings_user_photo_height</item>
    </style>

    <style name="user_change_photo">
        <item name="android:layout_width">@dimen/settings_user_change_photo_width</item>
        <item name="android:layout_height">@dimen/settings_user_change_photo_height</item>
        <item name="android:layout_marginEnd">@dimen/settings_user_change_photo_margin_end</item>
    </style>

    <style name="settings_user_info">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/settings_margin_to_photo</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="large_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/large_text_size</item>
    </style>

    <style name="normal_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/normal_text_size</item>
    </style>

    <style name="small_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/small_text_size</item>
    </style>

    <style name="settings_btn">
        <item name="android:padding">@dimen/small_padding</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>

        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:background">@drawable/ripple_effect</item>
    </style>

    <style name="button_label" parent="small_text">
        <item name="android:textColor">@color/grey</item>

    </style>

    <style name="btn_value" parent="normal_text">
        <item name="android:textColor">@color/dark</item>

    </style>

    <style name="separator">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_marginVertical">@dimen/small_margin</item>
        <item name="android:background">@color/grey_light</item>
    </style>

    <style name="editText" parent="normal_text">
        <item name="itemTextAppearanceActive">@color/purple_500</item>
        <item name="android:textColorHint">@color/grey</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:backgroundTint" tools:targetApi="lollipop">@color/grey</item>
        <item name="android:lines">1</item>
        <item name="android:inputType">phone</item>
    </style>


</resources>